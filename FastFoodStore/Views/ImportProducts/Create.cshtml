@section scripts{
    <script>
        //Add Multiple Order.
        $("#addToList").click(function (e) {
            e.preventDefault();

            if ($.trim($("#productid").val()) == "" || $.trim($("#priceimport").val()) == "" || $.trim($("#amount").val()) == "") return;

            var productId = $("#productid").val(),
                priceimport = $("#priceimport").val(),
                amount = $("#amount").val(),
                detailsTableBody = $("#detailsTable tbody");

            var productItem = '<tr><td>' + productId + '</td><td>' + priceimport + '</td><td>' + amount + '</td><td><a data-itemId="0" href="#" class="deleteItem">Remove</a></td></tr>';
            detailsTableBody.append(productItem);
            clearItem();
        });
        //After Add A New Order In The List, Clear Clean The Form For Add More Order.
        function clearItem() {
            $("#productid").val('');
            $("#priceimport").val('');
            $("#amount").val('');
        }
        // After Add A New Order In The List, If You Want, You Can Remove It.
        $(document).on('click', 'a.deleteItem', function (e) {
            e.preventDefault();
            var $self = $(this);
            if ($(this).attr('data-itemId') == "0") {
                $(this).parents('tr').css("background-color", "#ff6347").fadeOut(800, function () {
                    $(this).remove();
                });
            }
        });
        //After Click Save Button Pass All Data View To Controller For Save Database
        function SaveImport(data) {
            return $.ajax({
                contentType: 'application/json; charset=utf-8',
                dataType: 'json',
                type: 'POST',
                url: "/ImportProducts/SaveImport",
                data: data,
                success: function (result) {
                    alert(result);
                    location.reload();
                },
                error: function () {
                    alert("Error!")
                }
            });
        }
        //Collect Multiple Order List For Pass To Controller
        $("#SaveImport").click(function (e) {
            e.preventDefault();

            var importArr = [];
            importArr.length = 0;

            $.each($("#detailsTable tbody tr"), function () {
                importArr.push({
                    productId: $(this).find('td:eq(0)').html(),
                    amount: $(this).find('td:eq(1)').html(),
                    priceimport: $(this).find('td:eq(2)').html(),
                });
            });


            var data = JSON.stringify({
                staffid: $("#staffid").val(),
                date: $("#date").val(),
                total: $("#total").val(),
                import: importArr
            });

            $.when(SaveImport(data)).then(function (response) {
                console.log(response);
            }).fail(function (err) {
                console.log(err);
            });
        });
    </script>
}